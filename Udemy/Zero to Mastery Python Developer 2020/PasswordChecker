# Enter Username and Password
username = input('What is your name: ')
password = input('Enter your password: ')

# Find the Length of Password and Replace Characters
passwordLength = len(password);
replacement = '*' * len(password);
secretPassword = password.replace(password, replacement);

# Print out Password Checking Statement
print('\n')
print(f'{username}, your password {secretPassword} is {passwordLength} characters long.'.format(username, secretPassword, passwordLength))
